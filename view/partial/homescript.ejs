<script>
            const pre = document.querySelector(".fa-angle-left");
            const next = document.querySelector(".fa-angle-right");
            const imgs = document.querySelectorAll(".container img");
            const items = document.querySelectorAll(".content .title");
            let n = 0;

            function changeSlider() {
                for (let i = 0; i < imgs.length; i++) {
                    imgs[i].style.display = "none";
                }

                imgs[n].style.display = "flex";
            }
            function changeSlider1() {
                for (let j = 0; j < items.length; j++) {
                    items[j].style.display = "none";
                }
                items[n].style.display = "block";
            }
            changeSlider();
            changeSlider1();

            pre.addEventListener("click", () => {
                if (n > 0) {
                    n--;
                } else {
                    n = imgs.length - 1;
                }
                changeSlider();
                changeSlider1();
            })
            next.addEventListener("click", (e) => {
                if (n < imgs.length - 1) {
                    n++;
                } else {
                    n = 0;
                }
                changeSlider();
                changeSlider1();
            })
        </script>
